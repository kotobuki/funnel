package {	import flash.display.Sprite;	import flash.events.Event;	import funnel.Gainer;	import funnel.PortEvent;	public class SimpleScopeTest extends Sprite {		// To change number of channels, modifiy this constant		// 表示するチャンネル数を変更するにはこの定数を変更する		private const NUM_CHANNELS:int = 2;		private var gainer:Gainer;		private var scope:SimpleScope;		private var scopes:Array;				public function SimpleScopeTest() {			gainer = new Gainer();			scopes = new Array(NUM_CHANNELS);			trace(scopes);			for (var i:int = 0; i < NUM_CHANNELS; i++) {				scopes[i] = new SimpleScope(10, 10 + (60 * i), 200);				addChild(scopes[i]);			}			addEventListener(Event.ENTER_FRAME, loop);		}						private function loop(event:Event):void {			for (var i:int = 0; i < NUM_CHANNELS; i++) {				scopes[i].update(gainer.analogInput(i).value);			}		}	}}