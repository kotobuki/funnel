package funnel.ui {	import flash.events.Event;	import funnel.*;	/**	 * Created 17 May 2009	 * By Shigeru Kobayashi	 * This is the class to express a potentiometer	 */	public class Potentiometer extends PhysicalInput {		private var _pin:Pin;		private var _value:Number = 0;		public function Potentiometer(potPin:Pin) {			super();			_pin = potPin;			_pin.addEventListener(PinEvent.CHANGE, changed);		}		public function get value():Number {			return _value;		}		public function setRange(minimum:Number, maximum:Number):void {			_pin.filters = [new Scaler(minimum, maximum, 0, 1, Scaler.LINEAR)];		}		private function changed(e:PinEvent):void {			_value = e.target.number;			dispatchEvent(new Event(Event.CHANGE));		}	}}