package funnel.ui {	import flash.events.Event;	import funnel.*;	/**	 * This is the class to express a potentiometer	 * 	 * @author Shigeru Kobayashi	 */	public class Potentiometer extends PhysicalInput {		private var _pin:Pin;		private var _value:Number = 0;		/**		 * 		 * @param potPin the pin number for a potentiometer		 */		public function Potentiometer(potPin:Pin) {			super();			_pin = potPin;			_pin.addEventListener(PinEvent.CHANGE, changed);		}		/**		 * 		 * @return the current value		 */		public function get value():Number {			return _value;		}		/**		 * 		 * @param minimum the minimum value		 * @param maximum the minimum value		 */		public function setRange(minimum:Number, maximum:Number):void {			_pin.filters = [new Scaler(minimum, maximum, 0, 1, Scaler.LINEAR)];		}		private function changed(e:PinEvent):void {			_value = e.target.number;			dispatchEvent(new Event(Event.CHANGE));		}	}}