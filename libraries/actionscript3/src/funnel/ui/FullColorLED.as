package funnel.ui {	import funnel.*;	/**	 * Created 17 May 2009	 * By Shigeru Kobayashi	 * This is the class to express a full color LED	 */	public class FullColorLED {		public static const SOURCE_DRIVE:uint = LED.SOURCE_DRIVE;		public static const SYNC_DRIVE:uint = LED.SYNC_DRIVE;		public static const ANODE_COMMON:uint = SYNC_DRIVE;		public static const CATHODE_COMMON:uint = SOURCE_DRIVE;		public static const KATHODE_COMMON:uint = SOURCE_DRIVE;		private var _redLED:LED;		private var _greenLED:LED;		private var _blueLED:LED;		public function FullColorLED(redLEDPin:Pin, greenLEDPin:Pin, blueLEDPin:Pin, driveMode:uint = SOURCE_DRIVE) {			_redLED = new LED(redLEDPin, driveMode);			_greenLED = new LED(greenLEDPin, driveMode);			_blueLED = new LED(blueLEDPin, driveMode);		}		public function setColor(red:Number, green:Number, blue:Number):void {			_redLED.value = red;			_greenLED.value = green;			_blueLED.value = blue;		}		public function fadeIn(time:Number = 1):void {			_redLED.fadeTo(1, time);			_greenLED.fadeTo(1, time);			_blueLED.fadeTo(1, time);		}		public function fadeOut(time:Number = 1):void {			_redLED.fadeTo(0, time);			_greenLED.fadeTo(0, time);			_blueLED.fadeTo(0, time);		}		public function fadeTo(red:Number, green:Number, blue:Number, time:Number = 1):void {			_redLED.fadeTo(red, time);			_greenLED.fadeTo(green, time);			_blueLED.fadeTo(blue, time);		}	}}