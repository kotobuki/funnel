package funnel {	import funnel.IOSystem;		/**	 * XBeeクラスはMaxStream XBeeシリーズを扱うためのクラスです。	 * 	 */ 	public class XBee extends IOSystem {				/**		 * XBee Series 1用のコンフィギュレーションを取得します。		 * @return Configurationオブジェクト		 */		public static function get XBS1():Configuration {			var k:Configuration = new Configuration();			k.config = [				AIN, AIN, AIN, AIN, AIN, AIN,				DIN, DIN			];			return k;		}				/**		 * @param nodes 利用するモジュールのID配列		 * @param host ホスト名		 * @param portNum ポート番号		 * @param samplingInterval サンプリング間隔(ms)		 */ 		public function XBee(nodes:Array = null, host:String = "localhost", portNum:Number = 9000, samplingInterval:int = 33) {			if (nodes == null) nodes = [];			var configs:Array = [];			for each (var id:uint in nodes) {				var config:Configuration = XBee.XBS1;				config.moduleID = id;				configs.push(config);			}			super(configs, host, portNum, samplingInterval);		}	}}