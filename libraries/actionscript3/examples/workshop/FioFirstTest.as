package {	import flash.display.Shape;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import funnel.*;	public class FioFirstTest extends Sprite {		private var fio:Fio;		public function FioFirstTest() {			// FIOのFirmata用標準コンフィギュレーションを選択			var config:Configuration = Fio.FIRMATA;			// D13（FIO上のLEDに接続されているピン）をデジタル出力にセットする			config.setDigitalPinMode(13, OUT);			// Fioのインスタンスを生成			// 引数：接続するFIOのID、コンフィギュレーション				fio = new Fio([1], config);			// 画面上にボタンとなる黒丸を用意して追加			var button:Sprite = new Sprite();			button.graphics.beginFill(0x000000);			button.graphics.drawCircle(200, 200, 50);			button.buttonMode = true;			addChild(button);			// ボタンにマウスダウンとマウスアップのイベントリスナをセット				button.addEventListener(MouseEvent.MOUSE_DOWN, mousePressed);			button.addEventListener(MouseEvent.MOUSE_UP, mouseReleased);			addEventListener(Event.ENTER_FRAME, loop);		}		private function loop(event:Event):void {			// 毎フレームごとに行う処理があればここに記述		}		private function mousePressed(e:Event):void {			// マウスボタンが押されたらD13の値を1にセット（点灯）			trace("押された");			fio.ioModule(1).digitalPin(13).value = 1;		}		private function mouseReleased(e:Event):void {			// マウスボタンが離されたらD13の値を0にセット（消灯）			trace("離された");			fio.ioModule(1).digitalPin(13).value = 0;		}	}}