package {	import flash.display.Sprite;	import funnel.*;	/**	 * 入力の状態を表示するためのスコープクラス	 * A signal scope class to show changes of inputs.	 */	public class SignalScope extends Sprite {		private var values:Array;		public function SignalScope(x:Number, y:Number, points:int) {			super();			this.x = x;			this.y = y;			this.values = new Array(points);			for (var i:int = 0; i < values.length; i++) {				values[i] = 0.0;			}		}		public function update(pin:Pin):void {			this.graphics.clear();			this.graphics.lineStyle(0.25, 0x000000);			this.graphics.drawRect(x - 2, y - 2, values.length + 4, 100 + 4);			this.graphics.lineStyle(0.5, 0x000000);			this.graphics.moveTo(x, y + 100);			values.push(pin.value);			values.shift();			var offset:Number = 0;			for (var i:int = 0; i < values.length; i++) {				offset = (1 - values[i]) * 100;				this.graphics.lineTo(x + i, y + offset);			}			offset = (1 - pin.average) * 100;			this.graphics.lineStyle(0.25, 0xFF0000);			this.graphics.moveTo(x, y + offset);			this.graphics.lineTo(x + values.length, y + offset);			offset = (1 - pin.maximum) * 100;			this.graphics.lineStyle(0.25, 0x00FF00);			this.graphics.moveTo(x, y + offset);			this.graphics.lineTo(x + values.length, y + offset);			offset = (1 - pin.minimum) * 100;			this.graphics.lineStyle(0.25, 0x0000FF);			this.graphics.moveTo(x, y + offset);			this.graphics.lineTo(x + values.length, y + offset);		}	}}