package {	import flash.display.Sprite;	import flash.events.Event;	import funnel.*;	/**	 * A simple example to test GainerGUI	 * - If a Funnel Server is running, connect to the server	 * - If failed to connect a server, show GainerGUI to control on the screen displays	 *	 * 1. Move the ain 0 slider => see the signal scope	 * 2. Toggle din 0 => see the dout 0-3	 * 3. Push the button => see the aout 0 and the LED	 *	 * @author Shigeru Kobayashi	 */	public class GainerGUITest extends Sprite {		private var gio:Gainer;		private var scope:SignalScope;		public function GainerGUITest() {			scope = new SignalScope(10, 100, 200, "ain 0");			addChild(scope);			// The last argument is a Sprite to attach a GainerGUI			// Try commented version when no Funnel Server is running to see error messages//			gio = new Gainer(Gainer.MODE1, "localhost", 9000);			gio = new Gainer(Gainer.MODE1, "localhost", 9000, this);			var osc:Osc = new Osc(Osc.SIN);			gio.analogOutput(0).addFilter(osc);			gio.button.addEventListener(PinEvent.RISING_EDGE, function(e:Event):void {					gio.led.value = 1;					osc.start();				});			gio.button.addEventListener(PinEvent.FALLING_EDGE, function(e:Event):void {					gio.led.value = 0;					osc.stop();					osc.reset();				});			gio.digitalInput(0).addEventListener(PinEvent.RISING_EDGE, function(e:Event):void {					gio.digitalOutput(0).value = 1;					gio.digitalOutput(1).value = 1;					gio.digitalOutput(2).value = 1;					gio.digitalOutput(3).value = 1;				});			gio.digitalInput(0).addEventListener(PinEvent.FALLING_EDGE, function(e:Event):void {					gio.digitalOutput(0).value = 0;					gio.digitalOutput(1).value = 0;					gio.digitalOutput(2).value = 0;					gio.digitalOutput(3).value = 0;				});			addEventListener(Event.ENTER_FRAME, loop);		}		private function loop(event:Event):void {			scope.update(gio.analogInput(0));		}	}}